<Window x:Class="DiplomApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление Дипломным Проектированием" Height="500" Width="800">
    <Grid>
        <TabControl>
            <!-- Вкладка 1: Отчет по защитам -->
            <TabItem Header="Отчет по защите (View)">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Button Name="btnLoadReport" Content="Обновить отчет" Click="BtnLoadReport_Click" 
                            Margin="10" Padding="5" HorizontalAlignment="Left"/>

                    <DataGrid Name="gridReport" Grid.Row="1" AutoGenerateColumns="True" 
                              IsReadOnly="True" Margin="10" />
                </Grid>
            </TabItem>

            <!-- Вкладка 2: Студенты -->
            <TabItem Header="Студенты">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Форма добавления -->
                    <StackPanel Grid.Column="0" Margin="10" Background="#f0f0f0">
                        <TextBlock Text="Добавить студента" FontWeight="Bold" Margin="0,0,0,10"/>

                        <TextBlock Text="ID Студента:"/>
                        <TextBox Name="txtId" Margin="0,0,0,5"/>

                        <TextBlock Text="ФИО:"/>
                        <TextBox Name="txtName" Margin="0,0,0,5"/>

                        <TextBlock Text="ID Группы:"/>
                        <TextBox Name="txtGroupId" Margin="0,0,0,5"/>

                        <TextBlock Text="ID Специальности:"/>
                        <TextBox Name="txtMajorId" Margin="0,0,0,5"/>

                        <TextBlock Text="Средний балл (GPA):"/>
                        <TextBox Name="txtGpa" Margin="0,0,0,10"/>

                        <Button Content="Добавить" Click="BtnAddStudent_Click" Height="30"/>
                    </StackPanel>

                    <!-- Список студентов -->
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Button Content="Загрузить список студентов" Click="BtnLoadStudents_Click" 
                                Margin="10" HorizontalAlignment="Left"/>

                        <DataGrid Name="gridStudents" Grid.Row="1" AutoGenerateColumns="True" Margin="10"/>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
